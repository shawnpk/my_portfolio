<tr>
  <td><%= blog.title.upcase %></td>
  <td>Published <%= time_ago_in_words(blog.created_at) %> ago</td>
  <td><%= blog.body %></td>
  <td><%= link_to blog.status, toggle_status_blog_path(blog) %></td>
  <td><%= link_to 'Show', blog %></td>
  <td><%= link_to 'Edit', edit_blog_path(blog) if logged_in?(:site_admin) %></td>
  <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: "Are you sure you want to delete #{blog.title}?" } if logged_in?(:site_admin) %></td>
</tr>
